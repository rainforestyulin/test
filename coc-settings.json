{
    // Automatically update 'b:coc_current_function'.
    "coc.preferences.extensionUpdateCheck": "daily",

    // Select first item on completion start.
    "suggest.noselect": false,
    // The indicator that shows a complete item can be expanded as a snippet.
    "suggest.snippetIndicator": "üëÅ",
    // Disable floating window for documentation.
    "suggest.floatEnable" : false,

    "signature.enable": false,
    // Show signature in status line.
    "signature.target": "float",

    "diagnostic.enableSign": true,
    "diagnostic.errorSign": "E",
    "diagnostic.warningSign": "W",
    "diagnostic.infoSign": "I",
    "diagnostic.hintSign": "H",
    "diagnostic.messageTarget": "float",

    "codeLens.enable": false,

    ////////////////////
    // coc-highlight
    "highlight.document.enable": false,
    "highlight.colors.enable": true,

    ////////////////////
    // language servers
    "languageserver": {
        "ccls": {
            "enable": true,
            "command": "ccls",
            "filetypes": [ "c", "cpp", "cuda", "objc", "objcpp" ],
            "rootPatterns": [ ".ccls", "compile_commands.json",
                            ".vim/", ".git/", ".hg/" ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache",
                    "retainInMemory": 1
                },
                "client" : {
                  "snippetSupport": true
                },
                "completion": {
                    "placeholder": false,
                    "filterAndSort": false,
                    "detailedLabel": false
                },
                "highlight": { "lsRanges": true }
            }
        },
        "clangd": {
            "enable": false,
            "command": "clangd",
            "args": [ "--background-index" ],
            "filetypes": [ "c", "cpp", "objc", "objcpp" ],
            "rootPatterns": [ "compile_commands.json",
                            "compile_flags.txt",
                            ".vim/", ".git/", ".hg/" ]
        }
    }
}

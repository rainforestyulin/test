#include "KMP.h"
#include <string.h>
//KMP字符串快速查找算法
void get_next(String T, int *next)
{
    int i, j;
    i=1;
    j=0;
    next[1]=0;
    while (i<T[0])
    {
        if (j==0 || T[i]==T[j])
        {
            ++i;
            ++j;
            next[i] = j;
        }
        else
            j= next[j];
    }
}
void get_nextval(String T, int *nextval)
{
    int i, j;
    i=1;
    j=0;
    nextval[1]=0;
    while (i<T[0])
    {
        if (j==0 || T[i]==T[j])
        {
            ++i;
            ++j;
            if (T[i]!=T[j])
                nextval[i]=j;
            else
                nextval[i] = nextval[j];
        }
        else
            j= nextval[j];
    }
}
/* 返回子串T在主串S中第pos个字符之后的位置。若不存在，则函数返回0.*/
int Index_KMP(String S, String T, int pos)
{
    int i = pos;
    int j = 1;
    int next[255];
    get_next(T, next);
    while (i <= S[0] && j<=T[0])
    {
        if (j==0 || S[i]==T[j])
        {
            ++i;
            ++j;
        }
        else
        {
            j = next[j];
        }
    }
    if (j > T[0])
        return i-T[0];
    else
        return 0;
}
